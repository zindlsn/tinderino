    "version": "0.2.0",
    "configurations": [
        {
            "name": "Windows",
            "request": "launch",
            "type": "dart",
            "args": [
                "-d",
                "Windows",
            ],
            "openDevTools": "logging",
        },
        {
            "name": "tinderino",
            "request": "launch",
            "type": "dart",
            "args": [
                "-d",
                "Chrome",
                "--web-renderer",
                "html",
            ],
            "openDevTools": "logging",
        },
        {
            "name": "zindl_hub (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "zindl_hub (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "All Tests",
            "type": "dart",
            "request": "launch",
            "program": "test/",
        }
    ]
